{
  "name": "n8n-nodes-polymarket",
  "version": "1.0.0",
  "description": "n8n community nodes for Polymarket - trading, market data, and order management",
  "keywords": [
    "n8n-community-node-package",
    "polymarket",
    "prediction markets",
    "crypto",
    "trading"
  ],
  "license": "MIT",
  "homepage": "https://github.com/yourusername/n8n-nodes-polymarket",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/n8n-nodes-polymarket.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PolymarketApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Polymarket/Polymarket.node.js",
      "dist/nodes/Polymarket/PolymarketTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "eslint-plugin-n8n-nodes-base": "^1.11.0",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^2.8.8",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ethers": "^6.9.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
